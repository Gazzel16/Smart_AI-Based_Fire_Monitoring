<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Circle background color (transparent) -->
    <solid android:color="#E8C1FD" />

    <!-- Circle border -->
    <stroke
        android:width="4dp"

        android:color="#F7D4FB" />

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
