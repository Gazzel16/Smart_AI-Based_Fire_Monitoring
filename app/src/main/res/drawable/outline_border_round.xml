<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#B3B0B0"/>  <!-- Red border -->

    <!-- Rounded corners -->
    <corners
        android:radius="16dp"/>

    <!-- Optional: background color -->
    <solid android:color="#FFFFFF"/>  <!-- White background -->

    <!-- Optional: padding inside the border -->
    <padding
        android:left="15dp"
        android:top="10dp"
        android:right="15dp"
        android:bottom="10dp"/>
</shape>
