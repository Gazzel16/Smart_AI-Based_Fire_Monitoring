<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F8F5F5" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#EFEBEB" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside EditText -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
