<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
             android:layout_height="wrap_content"

    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">

     <ImageView
         android:id="@+id/imagePlaceHolder"
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:scaleType="centerCrop"
         app:srcCompat="@drawable/fire_fighter" />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_margin="12dp">

     <TextView
         android:id="@+id/courseSection"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/quick_sand"
         android:textSize="18sp"
         android:textStyle="bold"
         android:layout_margin="2dp"
         android:text="From: BSIT4J" />

     <TextView
         android:id="@+id/name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/quick_sand"
         android:textStyle="bold"
         android:layout_margin="2dp"
         android:text="Name: Kurt Agus" />

     <TextView
         android:id="@+id/description"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="2dp"
         android:padding="8dp"
         android:background="@drawable/round_corner_no_padding"

         android:fontFamily="@font/fir_sans_italic"
         android:backgroundTint="#EDE2E2"
         android:text="'Hi im kurt agus im a firefighter'" />
 </LinearLayout>

 </LinearLayout>
</androidx.cardview.widget.CardView>