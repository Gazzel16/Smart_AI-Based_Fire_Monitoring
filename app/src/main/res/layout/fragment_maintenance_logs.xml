<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.AdminFragments.SensorMaitenanceInstructionFragment">


    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:background="#293DAB"
        android:textColor="@color/white"
        android:text="Maintenance Logs" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/edittext_background"
            android:text="This button is to inform residence if \nSensors are undermaintenance"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/informBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:backgroundTint="#E91E63"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:text="Inform" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        android:text="Maintenance Log Dates" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMaintenanceLogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"/>
</LinearLayout>